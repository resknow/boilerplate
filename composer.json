{
    "name": "resknow/boilerplate",
    "description": "Boilerplate - A PHP boilerplate that takes the faff out of developing websites.",
    "license": "BlueOak",
    "homepage": "https://github.com/resknow/boilerplate",
    "type": "project",
    "support": {
        "issues": "https://github.com/resknow/boilerplate/issues"
    },
    "config": {
        "vendor-dir": "_includes/vendor"
    },
    "require": {
        "php": "^7.1",
        "twig/twig": "2.11",
        "filp/whoops": "2.5",
        "bramus/router": "1.4.2",
        "mustangostang/spyc": "0.6.3"
    },
    "autoload": {
        "psr-4": {
            "BP\\": "_includes/core/classes/BP/"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"unlink('composer.json');\"",
            "@php -r \"unlink('LICENSE.md');\"",
            "@php -r \"rename('composer.json.default', 'composer.json');\""
        ]
    }
}